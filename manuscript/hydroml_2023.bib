@article{amatulliHydrography90mNewHighresolution2022,
  title = {Hydrography90m: A New High-Resolution Global Hydrographic Dataset},
  shorttitle = {Hydrography90m},
  author = {Amatulli, Giuseppe and Garcia Marquez, Jaime and Sethi, Tushar and Kiesel, Jens and Grigoropoulou, Afroditi and {\"U}blacker, Maria M. and Shen, Longzhu Q. and Domisch, Sami},
  year = {2022},
