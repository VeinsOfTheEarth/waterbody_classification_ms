@article{davidDecadeRAPIDReflections2016,
  title = {A Decade of {{RAPID}}---{{Reflections}} on the Development of an Open Source Geoscience Code},
  author = {David, C{\'e}dric H. and Famiglietti, James S. and Yang, Zong-Liang and Habets, Florence and Maidment, David R.},
  year = {2016},
  month = may,
  journal = {Earth and Space Science},
